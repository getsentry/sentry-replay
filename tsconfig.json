{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es5",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "@test": ["test"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "rollup.config.ts",
    "vitest.config.ts",
    "test.setup.ts"
  ],
  "exclude": ["node_modules"]
}
