{
  "extends": "./config/tsconfig.core.json",
  "compilerOptions": {
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@test": ["./test"],
      "@test/*": ["./test/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "rollup.config.ts",
    "jest.config.ts",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules"]
}
