{
  "name": "@sentry/replay",
  "version": "0.4.8",
  "description": "User replays for Sentry",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "bootstrap": "yarn && cd demo && yarn",
    "build": "yarn rollup --configPlugin @rollup/plugin-typescript",
    "build:all": "yarn run build:worker && yarn run build:core",
    "build:dev": "NODE_ENV=development yarn build:all",
    "build:prod": "NODE_ENV=production yarn build:all",
    "build:core": "yarn build --config config/rollup.config.core.ts",
    "build:worker": "yarn build --config config/rollup.config.worker.ts",
    "clean": "yarn rimraf dist",
    "dev": "yarn build:dev --watch",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky install",
    "prepack": "yarn build:prod",
    "size": "yarn build:prod && size-limit",
    "size-limit-build": "yarn pack",
    "start:demo": "yarn build:dev && cd demo && yarn start",
    "test": "yarn jest"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getsentry/sentry-replay.git"
  },
  "author": "Sentry",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/getsentry/sentry-replay/issues"
  },
  "homepage": "https://github.com/getsentry/sentry-replay#readme",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@sentry/browser": "^7.7.0",
    "@size-limit/preset-big-lib": "^7.0.8",
    "@types/jest": "^28.1.1",
    "@types/node": "^16.0.0",
    "@types/pako": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": ">=6",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jsdom-worker": "^0.2.1",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.0",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^7.0.8",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@sentry/core": "^7.7.0",
    "@sentry/types": "^7.7.0",
    "@sentry/utils": "^7.7.0",
    "pako": "^2.0.4",
    "rrweb": "^1.1.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn eslint --cache --fix"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "4500ms"
    }
  ],
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.19"
  }
}
