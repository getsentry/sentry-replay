{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": "..",
    "rootDir": "..",
    "outDir": "dist",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../src/**/*.test.ts"]
}
